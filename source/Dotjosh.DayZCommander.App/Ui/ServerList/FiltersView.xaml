									VerticalAlignment="Center"
									Height="12" />
						<TextBlock Text="Tracers"
								   Margin="4 0 0 2"
								   Foreground="#EEEEEE"/>
					</StackPanel>
				</CheckBox.Content>
			</CheckBox>

		
			<CheckBox
					  IsChecked="{Binding Filter.HasNameplates, Mode=TwoWay}"
					  IsThreeState="True"
				Style="{StaticResource FilterCheckBox}"
					  Margin="0 10 0 0">
				<CheckBox.Content>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="N"
									Foreground="#EEEEEE"
									Width="12" 
								   FontSize="14"
								Margin="0 0 0 3"
									VerticalAlignment="Center"
									Height="18" />
						<TextBlock Text="Nameplates"
								   Margin="4 0 0 0"
								   Foreground="#EEEEEE"/>
					</StackPanel>
				</CheckBox.Content>
			</CheckBox>	
			
			<CheckBox
					  IsChecked="{Binding Filter.HasCrosshairs, Mode=TwoWay}"
					  IsThreeState="True"
				Style="{StaticResource FilterCheckBox}"
					  Margin="0 10 0 0">
